<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="locale">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/ToolbarColoredBackArrow"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimary"
                android:theme="@style/ToolbarColoredBackArrow">

            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_98sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/header" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/mainProgressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/imageLayout">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/organizationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/progressLayout"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:text="@string/organization"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressLayout"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_toLeftOf="@id/organizationText"
                    android:text="@string/organization"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/organizationText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/category"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/organizationText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toLeftOf="@id/categoryText"
                    android:text="@string/category"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/categoryText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/address"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/categoryText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toLeftOf="@id/addressText"
                    android:text="888888888888"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/placeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/addressText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/region"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toLeftOf="@id/placeText"
                    android:text="@string/organization"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/descriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/placeText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/description"
                    android:textColor="@color/black" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/placeText"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toLeftOf="@id/descriptionText"
                    android:text="desctiption description"
                    android:textColor="@color/black" />
            </RelativeLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>