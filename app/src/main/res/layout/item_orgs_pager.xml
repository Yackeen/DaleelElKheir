<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/offWhiteDark"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo2" />

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/urgentCaseLayout"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/thumbnail"
            android:layout_toLeftOf="@id/unFollowOrg"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_toStartOf="@id/unFollowOrg"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/orgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:ellipsize="end"
                android:maxLength="22"
                android:maxLines="1"
                android:text="org title sample"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="@string/address"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/orgAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:text="cairo-egypt"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="@string/department"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/orgCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:text="children help dfsdffsd"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="@string/region"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/orgRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:text="elmaadi"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/unFollowOrg"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/rounded_delete" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:text="@string/more"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
